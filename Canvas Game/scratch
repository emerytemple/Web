	var bg_ctx = document.getElementById('background-layer').getContext('2d');
	
	bg_ctx.clearRect(0, 0, game_data.width, game_data.height);
	
	bg_ctx.fillStyle = 'green';
	bg_ctx.fillRect(0, 450, 800, 150);
	
	bg_ctx.fillStyle = 'lightblue';
	bg_ctx.fillRect(0, 0, 800, 450);
	
	bg_ctx.fillStyle = 'yellow';
	bg_ctx.beginPath();
	bg_ctx.arc(650, 100, 50, 0, Math.PI*2);
	bg_ctx.fill();
	bg_ctx.closePath();
	
	
var image_objects = [];

function load_images(sources, on_complete) {
	// image_preloader

	var loaded = 0;

	function on_load() {
		loaded++;
		if (loaded == sources.length) {
			on_complete();
		}
	}
	
	for (var i = 0; i < sources.length; i++) {
		var img = new Image();
		img.addEventListener('load', on_load);
		img.src = sources[i];
		image_objects.push(img);
	}
}

load_images(['assets/tiles_spritesheet.png'], render);









